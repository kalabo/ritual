@model IEnumerable<Ritual.Booking.Data.Membership>

@{
    ViewBag.Title = "Index";
}

<h2>Ritual - Memberships Management</h2>

<p>
    @Html.ActionLink("Create New Membership", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PackageId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CancellationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paid)
        </th>
