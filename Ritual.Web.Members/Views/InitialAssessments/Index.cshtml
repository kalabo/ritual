@model IEnumerable<Ritual.Data.InitialAssessment>

@{
    ViewBag.Title = "Ritual Initial Assessments";
}

<section class="content-header">
    <div class="row">
        <div class="large-12 columns">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="large-12 columns">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AssessmentDateTime)
                    </th>
                    <th>
                        Trainer
                    </th>
                    <th>
                        Member
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AssessmentDateTime)
                        </td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.AspNetUser.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Member.AspNetUser.FullName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "button" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "button" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "button" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>
