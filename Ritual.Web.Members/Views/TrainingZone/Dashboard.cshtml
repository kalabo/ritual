@model Ritual.Data.TrainingZoneDashboardData

@{
    ViewBag.Title = "Training Zone Dashboard";
}
<section class="content-header">
    <div class="row">
        <div class="large-12 columns">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</section>
<!-- Main content -->
<!-- Member Block-->
@if (Model.UserMember.Memberships.Count() > 0)
{

    <section class="content">
        <div class="row">
            <div class="large-12 columns">
                <p>Welcome back @Model.UserMember.AspNetUser.FirstName to your training gateway.  Be Brave!</p>
                <div class="row">

                    <a href="@Url.Action("MyRitual", "TrainingZone")">
                        <div class="card-container large-4 medium-6 small-12 columns">
                            <div class="card">
                                <div class="front bg-greensea">
                                    <!-- row -->
                                    <div class="row collapse">
                                        <!-- col -->
                                        <div class="small-3 columns">
                                            <i class="fa fa-user fa-4x"></i>
                                        </div>
                                        <!-- /col --> <!-- col -->
                                        <div class="small-9 columns">
                                            <p class="text-elg text-strong mb-0">My Ritual</p>
                                            <span>View / Manage your Profile and Memberships.</span>
                                        </div> <!-- /col -->
                                    </div> <!-- /row -->
                                </div>
                            </div>
                        </div>
                    </a>
                    <a href="@Url.Action("Booking", "TrainingZone")">
                        <div class="card-container large-4 medium-6 small-12 columns">
                            <div class="card">
                                <div class="front bg-greensea">
                                    <!-- row -->
                                    <div class="row collapse">
                                        <!-- col -->
                                        <div class="small-3 columns">
                                            <i class="fa fa-plus fa-4x"></i>
                                        </div>
                                        <!-- /col --> <!-- col -->
                                        <div class="small-9 columns">
                                            <p class="text-elg text-strong mb-0">New Booking</p>
                                            <span>Book your next ritual experience.</span>
                                        </div> <!-- /col -->
                                    </div> <!-- /row -->
                                </div>
                            </div>
                        </div>
                    </a>
                    <a href="@Url.Action("MyAssessments", "TrainingZone")">
                        <div class="card-container large-4 medium-6 small-12 columns">
                            <div class="card">
                                <div class="front bg-greensea">
                                    <!-- row -->
                                    <div class="row collapse">
                                        <!-- col -->
                                        <div class="small-3 columns">
                                            <i class="fa fa-bar-chart-o fa-4x"></i>
                                        </div>
                                        <!-- /col --> <!-- col -->
                                        <div class="small-9 columns">
                                            <p class="text-elg text-strong mb-0">My Assessments</p>
                                            <span>View the details of your quarterly assessments.</span>
                                        </div> <!-- /col -->
                                    </div> <!-- /row -->
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="large-4 medium-4 columns">
                <h3>My Current Membership</h3>
                <table class="table">
                    <tr>
                        <th>Details</th>
                    </tr>
                    <tr>
                        @if (Model.UserMember.getActiveMembership() != null)
                        {
                            <td>Your current membership will expire in @Model.DaysTillMembershipExpiry days.</td>
                        }
                        else
                        {
                            <td>You do not currently have an active membership.  If you would like to request a renewal please click here.</td>
                        }

                    </tr>
                </table>
            </div>
            <div class="large-4 medium-4 columns">
                <h3>My Upcoming Bookings</h3>
                <table class="table">
                    <tr>
                        <th>Date</th>
                        <th>Start Time</th>
                        <th>Location</th>
                        <th></th>
                    </tr>
                    @if (Model.UpcomingBookings.Count() > 0)
                    {
                        foreach (var item in Model.UpcomingBookings)
                        {
                            <tr>
                                <td>
                                    @item.Date.ToString("dddd, dd MMM, yyyy")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeSlot.StartTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "CancelBooking", new { bookingId = item.Id }, new { @class = "button" })
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="4"><div class="alert-box">You have no Upcoming Bookings</div></td></tr>
                    }
                </table>
                <h3>My Past Bookings</h3>
                <table class="table">
                    <tr>
                        <th>Date</th>
                        <th>Start Time</th>
                        <th>Location</th>
                    </tr>
                    @if (Model.PastBookings.Count() > 0)
                    {
                        foreach (var item in Model.PastBookings)
                        {
                            <tr>
                                <td>
                                    @item.Date.ToString("dddd, dd MMM, yyyy")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeSlot.StartTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location.Name)
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="3"><div class="alert-box">You have no Past Bookings</div></td></tr>
                    }
                </table>
            </div>
            <div class="large-4 medium-4 columns">
                <h3>My Quarterly Assessments</h3>
                <table class="table">
                    <tr>
                        <th>Date</th>
                        <th>RPE</th>
                    </tr>
                    @if (Model.QuarterlyAssessments.Count() > 0)
                    {
                        foreach (var item in Model.QuarterlyAssessments)
                        {
                            <tr>
                                <td>
                                    @item.QADateTime.Value.ToString("dddd, dd MMM, yyyy - hh:mm")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QAClientRPE)
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="2"><div class="alert-box">You have no Quarterly Assessments</div></td></tr>
                    }
                </table>
            </div>
        </div>
    </section>

}
else
{
    // Possibly change this to use a partial view?
    <section class="content">
        <div class="row">
            <div class="large-12 columns">
                <p>Welcome @Model.UserMember.AspNetUser.FirstName to the start of your new personal Ritual.  Be Brave!</p>
                <div class="alert-box">
                    <i class='fa fa-info-circle'></i> It looks like you still haven't finished setting up your Trial membership.  You will need to choose a date for when your trial membership will begin and the time of the initial assessment will take place.<br /><br/>
                    Click the Trial Setup button below to start your Ritual experience.
                </div>
                <div class="row" data-equalizer>
                    <a href="@Url.Action("TrialSetup", "TrainingZone")">
                        <div class="card-container large-6 medium-6 small-12 columns">
                            <div class="card" data-equalizer-watch>
                                <div class="front bg-greensea">
                                    <!-- row -->
                                    <div class="row collapse">
                                        <!-- col -->
                                        <div class="small-3 columns">
                                            <i class="fa fa-user fa-4x"></i>
                                        </div>
                                        <!-- /col --> <!-- col -->
                                        <div class="small-9 columns">
                                            <p class="text-elg text-strong mb-0">Trial Setup</p>
                                            <span>Complete your trial setup.</span>
                                        </div> <!-- /col -->
                                    </div> <!-- /row -->
                                </div>
                            </div>
                        </div>
                    </a>
                    <a href="@Url.Action("DeleteAccount", "TrainingZone")">
                        <div class="card-container large-6 medium-6 small-12 columns">
                            <div class="card bg-red" data-equalizer-watch>
                                <div class="front">
                                    <!-- row -->
                                    <div class="row collapse">
                                        <!-- col -->
                                        <div class="small-3 columns">
                                            <i class="fa fa-warning fa-4x"></i>
                                        </div>
                                        <!-- /col --> <!-- col -->
                                        <div class="small-9 columns">
                                            <p class="text-elg text-strong mb-0">Delete my account</p>
                                            <span>Made a mistake?  Click here to cancel.</span>
                                        </div> <!-- /col -->
                                    </div> <!-- /row -->
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
    </section>
}
