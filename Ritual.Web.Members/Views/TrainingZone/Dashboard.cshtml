@model Ritual.Data.TrainingZoneDashboardData

@{
    ViewBag.Title = "Training Zone Dashboard";
}
<section class="content-header">
    <div class="row">
        <div class="large-12 columns">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</section>
<!-- Main content -->
<!-- Member Block-->

<section class="content">
    <div class="row">
        <div class="large-12 columns">
            <p>Welcome back @Model.UserMember.AspNetUser.FirstName to your training gateway.  Be Brave!</p>
            <div id="globalannouncements">
                <ul id="globalannouncements-list">
                </ul>
            </div>
            <div class="row">

                <a href="@Url.Action("Dashboard", "MyRitual")">
                    <div class="card-container large-4 medium-6 small-12 columns">
                        <div class="card">
                            <div class="front bg-greensea">
                                <!-- row -->
                                <div class="row collapse">
                                    <!-- col -->
                                    <div class="small-3 columns">
                                        <i class="fa fa-user fa-4x"></i>
                                    </div>
                                    <!-- /col --> <!-- col -->
                                    <div class="small-9 columns">
                                        <p class="text-elg text-strong mb-0">My Ritual</p>
                                        <span>View / Manage your Profile and Memberships.</span>
                                    </div> <!-- /col -->
                                </div> <!-- /row -->
                            </div>
                        </div>
                    </div>
                </a>
                <a href="@Url.Action("Booking", "TrainingZone")">
                    <div class="card-container large-4 medium-6 small-12 columns">
                        <div class="card">
                            <div class="front bg-greensea">
                                <!-- row -->
                                <div class="row collapse">
                                    <!-- col -->
                                    <div class="small-3 columns">
                                        <i class="fa fa-plus fa-4x"></i>
                                    </div>
                                    <!-- /col --> <!-- col -->
                                    <div class="small-9 columns">
                                        <p class="text-elg text-strong mb-0">New Booking</p>
                                        <span>Book your next ritual experience.</span>
                                    </div> <!-- /col -->
                                </div> <!-- /row -->
                            </div>
                        </div>
                    </div>
                </a>
                <a href="@Url.Action("MyAssessments", "TrainingZone")">
                    <div class="card-container large-4 medium-6 small-12 columns">
                        <div class="card">
                            <div class="front bg-greensea">
                                <!-- row -->
                                <div class="row collapse">
                                    <!-- col -->
                                    <div class="small-3 columns">
                                        <i class="fa fa-bar-chart-o fa-4x"></i>
                                    </div>
                                    <!-- /col --> <!-- col -->
                                    <div class="small-9 columns">
                                        <p class="text-elg text-strong mb-0">My Assessments</p>
                                        <span>View the details of your quarterly assessments.</span>
                                    </div> <!-- /col -->
                                </div> <!-- /row -->
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-4 medium-4 columns">
            <h3>My Current Membership</h3>
            <table class="table">
                <tr>
                    <th>Details</th>
                </tr>
                <tr>
                    <td>
                        @if (Model.UserMember.hasActiveMembership())
                        {
                            @Model.UserMember.getActiveMembership().getMembershipStatusText();
                        }
                        else
                        {
                            @Model.UserMember.getLatestMembership().getMembershipStatusText();
                        }
                    </td>
                </tr>
            </table>
        </div>
        <div class="large-4 medium-4 columns">
            <h3>My Upcoming Bookings</h3>
            <div id="upcoming-bookings"></div>
            <h3>My Past Bookings</h3>
            <div id="past-bookings"></div>
        </div>
        <div class="large-4 medium-4 columns">
            <h3>My Quarterly Assessments</h3>
            <table class="table">
                <tr>
                    <th>Date</th>
                    <th>RPE</th>
                </tr>
                @if (Model.QuarterlyAssessments.Count() > 0)
                {
                    foreach (var item in Model.QuarterlyAssessments)
                    {
                        <tr>
                            <td>
                                @item.QADateTime.Value.ToString("dddd, dd MMM, yyyy - hh:mm")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QAClientRPE)
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="2"><div class="alert-box">You have no Quarterly Assessments</div></td></tr>
                }
            </table>
        </div>
    </div>
</section>



@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            RITUAL.Core.TrainingZone.News("#globalannouncements-list", 5);
            RITUAL.Core.TrainingZone.UpcomingBookings("#upcoming-bookings");
            RITUAL.Core.TrainingZone.PastBookings("#past-bookings");
        });

    </script>
}