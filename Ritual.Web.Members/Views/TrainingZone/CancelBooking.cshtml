@model Ritual.Data.TrainingZoneCancelBooking

@{
    ViewBag.Title = "Cancel Existing Booking";
}
<section class="content-header">
    <div class="row">
        <div class="large-12 columns">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="large-12 columns">
            <p>Hey @Model.sessionBooking.Member.FirstName, can you confirm that you would like to cancel the following session?</p>
            <dl class="dl-horizontal">
                <dt>Location</dt>
                <dd>@Model.sessionBooking.Location.Name</dd>

                <dt>Time</dt>
                <dd>@Model.sessionBooking.TimeSlot.StartTime</dd>

                <dt>Date</dt>
                <dd>@Model.sessionBooking.Date.ToString("dddd, dd MMMM, yyyy")</dd>
            </dl>
            @using (Html.BeginForm("DeleteBookingConfirmed", "TrainingZone", new { id = Model.sessionBooking.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                
                <input type="submit" name="submit" class="button" value="Cancel Booking" />
            }

            <a href="@Url.Action("Dashboard", "TrainingZone")">

                <div class="button cancel">Cancel</div>
            </a>
        </div>
    </div>
</section>
