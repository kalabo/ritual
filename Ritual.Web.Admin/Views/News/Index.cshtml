@model PagedList.IPagedList<Ritual.Data.News>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Ritual News";
}

<section class="content-header">
    <div class="row">
        <div class="large-8 columns">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="large-4 columns">
            @Html.ActionLink("Create New", "Create", "", new { @class = "button small right" })
        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="large-12 columns">
            @using (Html.BeginForm("Index", "News", FormMethod.Get))
            {
                <p>
                    Find article by title: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                    <input type="submit" value="Search" class="button" />
                </p>
            }
            <table class="table">
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Created
                    </th>
                    <th>
                        Modified
                    </th>
                    <th>
                        Created By
                    </th>
                    <th>
                        Modified By
                    </th>
                    <th>
                        Location
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AspNetUserCreatedBy.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AspNetUserModifiedBy.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NewsCategory.Title)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "button" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "button" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "button" })
                        </td>
                    </tr>
                }

            </table>
            <br />
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        </div>
    </div>
</section>