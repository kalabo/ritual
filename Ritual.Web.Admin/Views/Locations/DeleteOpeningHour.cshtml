@model Ritual.Data.OpeningHour
@{
    ViewBag.Title = "Delete Opening Hour - " + @ViewBag.Location.Name;
}

<section class="content-header">
    <div class="row">
        <div class="large-12 columns">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="large-12 columns">
            <h3>Are you sure you want to delete this opening hour?</h3>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.DateOfWeek)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateOfWeek)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.OpenTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OpenTime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CloseTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CloseTime)
                </dd>
                
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <input type="hidden" name="locationId" value="@ViewBag.Location.Id" />
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="button btn-default" />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</section>